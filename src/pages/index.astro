---
import { getRelativeLocaleUrl } from 'astro:i18n';
import LandingPage from '../layouts/landingPage.astro';

export type Locales = 'en' | 'he' | 'ru';

export type LocaleProps = Record<Locales, string>

const buttonLabels:LocaleProps = {
    en: "English",
    he: "עברית",
    ru: "Русский"
}

const buttonUrls:LocaleProps= {en:getRelativeLocaleUrl("en"), he:getRelativeLocaleUrl("he"), ru:getRelativeLocaleUrl("ru")}
---

<LandingPage title="Choose language" buttonUrls={buttonUrls} buttonLabels={buttonLabels} />
